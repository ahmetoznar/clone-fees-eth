contract MerkleProof is Ownable,  ReentrancyGuard   {
    
    using SafeMath for uint256;
    MintedToken public feeToken;

    uint256 constant public SERVICE_FEE = 0.1 ether;
    uint256 constant public REFERRAL_FEE = 15; //  15%
    address public FEE_ADDRESS;
    

    uint256 public unlockOpenTime;
    uint256 public unlockCloseTime;
    uint public merkleRoot;
    bool public paused;
    address [] public allUsers;
    uint256 public totalClaimed;

    mapping(address => UserInfo) userDetail;

    struct UserInfo {
        bool isUnlocked;
        uint256 referencedUserCount;
        uint256 lastProcessTime;
        bool isClaimed;
    }

    
    event Paused(bool paused);
    event UserUnlocked(address UserAddress, uint256 date);
    event tokenClaim(address UserAddress, uint256 amount, uint256 date);

    constructor(uint256 _unlockOpenTime, uint256 _unlockCloseTime, MintedToken _tokenAddress) {
        unlockOpenTime = _unlockOpenTime;
        unlockCloseTime = _unlockCloseTime;
        feeToken = _tokenAddress;
    }

    modifier mustNotPaused() {
        require(!paused, "Paused!");
        _;
    }

    function changePause(bool _paused) public onlyOwner {
        paused = _paused;
        emit Paused(_paused);
    }

    function isUnlocked(address _user) public view returns (bool) {
		UserInfo storage _userDetail = userDetail[_user];
        return _userDetail.isUnlocked;
	}

    function getRoot() public view returns (uint) {
      return merkleRoot;
    }

    function getAllUnlockers() public view returns (address[] memory){
        return allUsers;
    }

    function getUserData(address _account) external view returns (bool, uint256, uint256, bool){
        UserInfo storage _userDetail = userDetail[_account];
        return (_userDetail.isUnlocked, _userDetail.referencedUserCount, _userDetail.lastProcessTime, _userDetail.isClaimed);
    }  

    function unlock(address payable _refAddress) external payable  mustNotPaused{
        require(block.timestamp > unlockOpenTime, "unlock period is not available");
        require(block.timestamp < unlockCloseTime, "closed");
        require(!isUnlocked(msg.sender), "user already unlocked");
        require(msg.value == SERVICE_FEE, "service fee must be 0.1 ether");
        uint256 _refFee = 0;
        
        UserInfo storage _userDetail = userDetail[msg.sender];
        UserInfo storage _refUser = userDetail[_refAddress];

        if(_refAddress != address(0x0)){
            _refFee = SERVICE_FEE * REFERRAL_FEE.div(100);
            _refAddress.transfer(_refFee);
        }
        uint256 _remaining = SERVICE_FEE - _refFee;
        payable(FEE_ADDRESS).transfer(_remaining);
        
        _userDetail.isUnlocked = true;
        _userDetail.lastProcessTime = block.timestamp;
        _refUser.referencedUserCount = _refUser.referencedUserCount.add(1); 

        emit UserUnlocked(msg.sender,block.timestamp);
    } 

    function claimTokens(uint256[9] calldata _data, uint[] memory _proof) external mustNotPaused {
        require(block.timestamp > unlockCloseTime, "claim period is not available");
        require(isUserUnlocked(msg.sender), "user is not unlocked");
        require(!isUserClaimed(msg.sender), "user already claimed");
        uint256 spentGasFeeAmount = _data[1];
        uint userLeaf = uint(keccak256(abi.encodePacked(msg.sender,_data)));
        require(verifyMerkle(userLeaf, _proof), "leaf is not correct");
        feeToken.mint(msg.sender, spentGasFeeAmount);
        UserInfo storage _userDetail = userDetail[msg.sender];
        _userDetail.isClaimed = true;
        _userDetail.lastProcessTime = block.timestamp;
        totalClaimed.add(spentGasFeeAmount);
        emit tokenClaim(msg.sender, spentGasFeeAmount, block.timestamp);
    }

    function isUserClaimed(address _account) public view returns (bool) {
        UserInfo storage _userDetail = userDetail[_account];
        return bool(_userDetail.isClaimed);
    }

    function isUserUnlocked(address _account) public view returns (bool) {
        UserInfo storage _userDetail = userDetail[_account];
        return bool(_userDetail.isUnlocked);
    }

    function setClosingTime(uint256 _closingTime) external onlyOwner {
		unlockCloseTime = _closingTime;
	}

    function setFeeAddress(address _feeAddress) external onlyOwner {
        FEE_ADDRESS = _feeAddress;
    }

    function setOpeningTime(uint256 _openingTime) external onlyOwner {
		unlockOpenTime = _openingTime;
	}

    function setRoot(uint _merkleRoot) external onlyOwner {
      merkleRoot = _merkleRoot;
    }   // setRoot

    function pairHash(uint _a, uint _b) internal pure returns(uint) {
      return uint(keccak256(abi.encode(_a ^ _b)));
    }
     // Verify a Merkle proof
    function verifyMerkle(uint _value, uint[] memory _proof) 
        public view returns (bool) {
      uint temp = _value;
      uint i;

      for(i=0; i<_proof.length; i++) {
        temp = pairHash(temp, _proof[i]);
      }

      return temp == merkleRoot;
    }
    
}  
